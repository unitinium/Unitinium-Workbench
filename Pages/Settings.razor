@page "/settings"
@inject Config config

<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="host">Host</label>
      <input class="form-control" id="host" placeholder="http://localhost" bind=@config.Host />
    </div>
    <div class="form-group col-md-6">
      <label for="port">Port</label>
      <input type="number" class="form-control" id="port" placeholder="8080" bind=@config.Port />
    </div>
  </div>
</form>